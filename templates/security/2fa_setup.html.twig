{% extends 'base.html.twig' %}

{% block title %}Configuration A2F{% endblock %}

{% block body %}
    <div class="max-w-3xl mx-auto py-12 relative z-50 mt-20">
        <h1 class="text-3xl text-center font-bold text-gray-900 mb-8">
            Configuration de l'authentification à deux facteurs (A2F)
        </h1>

        <p class="text-lg text-center text-gray-700 mb-4">
            Scannez le QR Code suivant avec votre application Google Authenticator :
        </p>

        <div class="flex justify-center mb-8">
            <img src="{{ qrCodeUrl }}" alt="QR Code" class="border border-gray-300 rounded-md">
        </div>

        <form method="post" action="{{ path('app_2fa_check') }}" class="space-y-4 text-center">
            <div class="flex justify-center gap-2">
                {% for i in 0..5 %}
                    {% if i == 3 %}
                        <div class="w-4"></div>
                    {% endif %}
                    <input type="text"
                           id="auth_code_{{ i }}"
                           name="auth_code[]"
                           maxlength="1"
                           class="w-12 h-12 text-center text-xl border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
                {% endfor %}
            </div>
            <button type="submit" class="mt-4 bg-indigo-600 text-white py-2 px-4 rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                Activer l'authentification à deux facteurs
            </button>
        </form>
    </div>
{% endblock %}
