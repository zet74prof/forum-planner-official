{% extends 'base.html.twig' %}

{% block title %}Timeslot index{% endblock %}

{% block body %}
    <h1>Timeslot index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>StartDateTime</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for timeslot in timeslots %}
            <tr>
                <td>{{ timeslot.id }}</td>
                <td>{{ timeslot.startDateTime ? timeslot.startDateTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_timeslot_show', {'id': timeslot.id}) }}">show</a>
                    <a href="{{ path('app_timeslot_edit', {'id': timeslot.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_timeslot_new') }}">Create new</a>
{% endblock %}
