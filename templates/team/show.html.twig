{% extends 'base.html.twig' %}

{% block title %}Stand{% endblock %}

{% block body %}
<div class="container mx-auto py-8 mt-20 relative z-50">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Stand Details</h1>

    <div class="bg-white shadow-md rounded-lg p-6 mb-6">
        <table class="min-w-full divide-y divide-gray-200">
            <tbody>
            <tr>
                <th class="px-4 py-2 text-left">Id</th>
                <td class="px-4 py-2">{{ team.id }}</td>
            </tr>
            <tr>
                <th class="px-4 py-2 text-left">Team Name</th>
                <td class="px-4 py-2">{{ team.name }}</td>
            </tr>
            <tr>
                <th class="px-4 py-2 text-left">Owner</th>
                <td class="px-4 py-2">{{ team.owner.username }}</td>
            </tr>
            <tr>
                <th class="px-4 py-2 text-left">Members</th>
                <td class="px-4 py-2">
                    <ul>
                        {% for member in team.members %}
                            <li>{{ member.username }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tbody>
        </table>
    </div>
</div>
{% endblock %}